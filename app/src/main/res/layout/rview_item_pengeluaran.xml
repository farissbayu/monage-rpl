<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_item_rv_pengeluaran">

    <TextView
        android:id="@+id/tv_kategori_pengeluaran"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:background="@drawable/kategori_bg_pengeluaran"
        android:gravity="center"
        android:text="kategori"
        android:textSize="12dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_tgl_pengeluaran"
        android:layout_width="55dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:textStyle="bold"
        android:textSize="12dp"
        android:text="tanggal"
        android:textColor="@color/white"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_nmnl_pengeluaran"
        android:layout_width="112dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:textSize="20dp"
        android:text="@string/nominal"
        android:textColor="@color/white"
        android:gravity="center"/>

</LinearLayout>

